<div class="sign-up-form">
  <%= form_for :session, url: sign_in_path do |f| %>
    <i class="fa fa-lock fa-4x" id='lock-icon' aria-hidden="true"></i>
    <div id='register'>Welcome!</div>
    <div id='demo'>Let us keep track of your blood pressure! </div>
    <div class='sign-in-error'><%= flash[:alert] %></div>
    <div class="row">
      <div class="small-12 medium-6 medium-offset-3 columns">
        <%= f.text_field :login, placeholder: "email or username" %>
        <%= f.password_field :password, placeholder: "password" %>
      </div>
    </div>
    <div class="form-actions">
      <a href='/sign-up' id='login-signup-button'><i class="fa fa-arrow-circle-left" style='margin-right: 10px' aria-hidden="true"></i>Sign Up</a>
      <input type='submit' />
      <a href='/sign-in' id='login-signup-button'><i class="fa fa-arrow-circle-left" style='margin-right: 10px' aria-hidden="true"></i>Sign In</a>
    </div>
  <% end %>
